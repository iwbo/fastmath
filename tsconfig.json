{
    "compileOnSave": false,
    "compilerOptions": {
        "target": "es5",
        "module": "amd",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "typeRoots": [
            "../node_modules/@types"
        ],
        "types": [
            "node",
            "socket.io",
            "express",
            "express-serve-static-core",
            "moniker"
        ]
    }, 
    "exclude": [
        "node_modules",
        "public"
    ]
}